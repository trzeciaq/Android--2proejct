<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lukastq.tourguide">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ArtistFragment"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_tab1" />
        <activity
            android:name=".CarFragment"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_tab2" />
        <activity
            android:name=".PeopleFragment"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_tab3">

        </activity>
        <activity
            android:name=".ItemDetails"
            android:configChanges="orientation|screenSize"
            android:label="Current item"
            android:parentActivityName=".MainActivity">

        </activity>
    </application>

</manifest>